{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
      "@components": ["src/components/"],
      "@pages": ["src/pages/"],
      "@routes": ["src/routes/"],
      "@services": ["src/services/"],
      "@context": ["src/context/"],
      "@redux": ["src/redux/"],
      "@middleware": ["src/middleware/"],
      "@hooks": ["src/hooks/"],
      "@config": ["src/config/"],
      "@types": ["src/types/"],
      "@public": ["public/"],
      "@assets": ["src/assets/"],
      "@sass": ["src/sass/"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
